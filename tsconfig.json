{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true, // Generate .d.ts files
    "declarationDir": "./lib/types" // Output directory for .d.ts files
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "tests"]
}
